@model IEnumerable<MenuItem>

        @foreach (var item in Model)
        {


            @if (item.IsPage)
            {
                <li class="nav-item @item.ActiveStyle">
                    <a class="nav-link" asp-area="@item.Area" asp-page="@item.Page">@item.Text</a>
                </li>
            }
            else
            {
                <li class="nav-item @item.ActiveStyle" >
                    <a class="nav-link" asp-controller="@item.Controller" asp-action="@item.Action">@item.Text</a>
                </li>

            }
         }